<style>
    /* Custom styles for the form container */
    .form-container {
        
        background-color: #FFF;
        border-radius: 10px;
        padding: 20px;
        justify-content: center;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        width: 500px; /* Adjust the width as needed */
        box-sizing: border-box;
        display: flex;
        justify-content: center;
        align-items: center;
        
        /* Center the form container horizontally */
    }
    
    /* Custom styles for the form */
    .form-group {
        margin-bottom: 20px;
        
    }
    
    label {
        display: block;
        font-weight: bold;
        color: goldenrod; /* Gold color */
    }
    
    input[type="number"] {
        width: 100%;
        padding: 10px;
        border: 1px solid goldenrod; /* Gold color */
        border-radius: 5px;
        font-size: 16px;
        color: #333;
    }
    
    button[type="submit"] {
        background-color: goldenrod; /* Gold color */
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        color: #FFF;
        font-size: 16px;
        cursor: pointer;
    }
    
    button[type="submit"]:hover {
        background-color: goldenrod; /* Slightly darker gold color on hover */
    }
    body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .form-container {
            width: 500px;
        }

        form {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .form-group {
            margin-bottom: 10px;
        }
</style>


<body>
    <div class="form-container">

        <form action="/reset-Password" method="post">
            <% if(errMessage != ""){ %>
                <div class="alert alert-warning alert-dismissible fade show"  role="alert" id="warningAlert" style="padding: 10px; background-color: lightsalmon;">
                  <%=  errMessage %>
                  <button type="button" class="close" onclick="errorClose()" aria-label="Close" fdprocessedid="bi0wev">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
             <% } %>
            <div class="form-group">
                <label for="otp-input">Enter OTP:</label>
                <input type="text" id="otp-input" name="otp" required>
            </div>
            <button type="submit">Submit</button>
        </form>
    </div>
</body>

</html>



